{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "importHelpers": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    "dist",
    "tests",
    "./jest.config.ts"
  ]
}